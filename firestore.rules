rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regole per la collezione 'users' e i token delle notifiche
    match /users/{userEmail} {
      // Permette lettura/scrittura solo al proprietario
      allow read, write: if request.auth != null && request.auth.token.email == userEmail;
      
      // Sotto-collezione tokens
      match /tokens/{tokenId} {
        allow read, write: if request.auth != null && request.auth.token.email == userEmail;
      }
    }
    
    // Regole per la collezione 'prenotazioni'
    match /prenotazioni/{document} {
      // Permette la lettura se l'utente è autenticato e l'email nel documento corrisponde alla sua
      allow read: if request.auth != null && request.auth.token.id == resource.data.id;
      
      // Permette la scrittura (creazione) se l'utente è autenticato e sta salvando la propria email
      allow create: if request.auth != null && request.auth.token.id == request.resource.data.id;
      
      // Permette aggiornamento e cancellazione solo se il documento appartiene all'utente
      allow update, delete: if request.auth != null && request.auth.token.id == resource.data.id;
    }
  }
}
